<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextMontserratMedium">
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TextMontserratMedium.Small" parent="TextMontserratMedium">
        <item name="android:textSize">@dimen/text_small</item>
    </style>
    
    <style name="TextMontserratMedium.Medium" parent="TextMontserratMedium">
        <item name="android:textSize">@dimen/text_medium</item>
    </style>

    <style name="TextMontserratMedium.Large" parent="TextMontserratMedium">
        <item name="android:textSize">@dimen/text_large</item>
    </style>

    <style name="TextMontserratMedium.XL" parent="TextMontserratMedium">
        <item name="android:textSize">@dimen/text_xl</item>
    </style>

    <style name="TabLayout">
        <item name="android:background">@color/light_green</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="tabTextColor">@color/black</item>
        <item name="tabSelectedTextColor">@color/white</item>
        <item name="tabIndicatorColor">@color/white</item>
<!--        <item name="tabTextAppearance">@style/tabLayoutTextStyle</item>-->
<!--        <item name="tabGravity">fill</item>-->
<!--        <item name="tabMode">auto</item>-->
    </style>
</resources>