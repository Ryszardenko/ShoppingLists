<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextMontserratMedium">
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TextMontserratBold">
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textColor">@color/light_green</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TextMontserratMedium.XXS" parent="TextMontserratMedium">
        <item name="android:textSize">@dimen/text_xxs</item>
    </style>

    <style name="TextMontserratMedium.XS" parent="TextMontserratMedium">
        <item name="android:textSize">@dimen/text_xs</item>
    </style>

    <style name="TextMontserratMedium.Small" parent="TextMontserratMedium">
        <item name="android:textSize">@dimen/text_small</item>
    </style>

    <style name="TextMontserratMedium.Medium" parent="TextMontserratMedium">
        <item name="android:textSize">@dimen/text_medium</item>
    </style>

    <style name="TextMontserratMedium.Large" parent="TextMontserratMedium">
        <item name="android:textSize">@dimen/text_large</item>
    </style>

    <style name="TextMontserratMedium.XL" parent="TextMontserratMedium">
        <item name="android:textSize">@dimen/text_xl</item>
    </style>

    <style name="TextMontserratBold.XL" parent="TextMontserratBold">
        <item name="android:textSize">@dimen/text_xl</item>
    </style>

    <style name="EditText">
        <item name="android:textColorHint">@color/grey_chateau</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textSize">@dimen/text_xs</item>
    </style>

    <style name="TabLayout">
        <item name="android:background">@color/light_green</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="tabTextColor">@color/grey_chateau</item>
        <item name="tabSelectedTextColor">@color/white</item>
        <item name="tabIndicatorColor">@color/white</item>
        <item name="iconTint">@color/white</item>
        <item name="tabTextAppearance">@style/TextMontserratMedium.XS</item>
        <item name="tabGravity">fill</item>
    </style>

    <style name="FloatingActionButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">bottom|end</item>
        <item name="android:layout_margin">@dimen/default_margin_large</item>
        <item name="android:backgroundTint">@color/light_green</item>
        <item name="android:src">@android:drawable/ic_input_add</item>
    </style>

    <style name="MaterialButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/btn_height_large</item>
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="cornerRadius">@dimen/btn_corner_large</item>
    </style>

    <style name="MaterialButton.NoBorder" parent="MaterialButton">
        <item name="backgroundTint">@color/light_green</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="MaterialButton.Border" parent="MaterialButton">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/light_green</item>
        <item name="strokeWidth">@dimen/stroke_thin</item>
        <item name="strokeColor">@color/light_green</item>
    </style>
</resources>