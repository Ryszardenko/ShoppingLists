<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/light_green</item>
        <item name="android:textColor">@color/light_green</item>
        <item name="android:editTextColor">@color/light_green</item>
        <item name="textAllCaps">false</item>
        <item name="colorControlNormal">@color/white</item>
    </style>

    <style name="Dialog.Transparent" parent="Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/light_green</item>
        <item name="android:textColor">@color/light_green</item>
        <item name="android:editTextColor">@color/light_green</item>
        <item name="android:windowMinWidthMajor">80%</item>
        <item name="android:windowMinWidthMinor">80%</item>
    </style>

</resources>