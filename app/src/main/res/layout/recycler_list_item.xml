<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="@dimen/default_icon"
            android:layout_height="@dimen/default_icon"
            android:layout_margin="@dimen/default_margin"
            android:background="@drawable/ic_shopping_cart"
            android:backgroundTint="@color/light_green" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_title"
                style="@style/TextMontserratMedium.Large"
                android:textColor="@color/light_green" />

            <TextView
                android:id="@+id/tv_date"
                style="@style/TextMontserratMedium.Small"
                android:textColor="@color/light_green" />

        </LinearLayout>

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/btn_edit"
            android:layout_margin="@dimen/default_margin_small"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/ic_edit"
            android:backgroundTint="@color/light_green"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/light_green" />

</LinearLayout>